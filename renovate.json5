{
  "extends": [
    "config:recommended",
    "docker:pinDigests",
  ],
  "customManagers": [
    // 全部に適用する
    {
      "customType": "regex",
      "fileMatch": ["\\.github/workflows/.*\\.ya?ml$"],
      "matchStrings": [
        "uses:\\s*docker://(?<depName>[^@\\s]+)@sha256:(?<digest>[0-9a-f]{64})(?:\\s*#\\s*(?<currentValue>\\S+))?"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "{{{depName}}}",
      "autoReplaceStringTemplate": "uses: docker://{{{depName}}}@{{{newDigest}}}{{#if newValue}} # {{{newValue}}}{{/if}}"
    },
    {
      "customType": "regex",
      "fileMatch": ["\\.github/workflows/.*\\.ya?ml$"],
      "matchStrings": [
        "uses:\\s*docker://(?<depName>[^@\\s]+)@sha256:(?<digest>[0-9a-f]{64})"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "{{{depName}}}",
      "autoReplaceStringTemplate": "uses: docker://{{{depName}}}@{{{newDigest}}}{{#if newValue}} # {{{newValue}}}{{/if}}"
    },

    // 特定の依存に対して更新を行う
    {
      "customType": "regex",
      "fileMatch": ["\\.github/workflows/.*\\.ya?ml$"],
      "matchStrings": [
        "uses:\\s*docker://(?<depName>ghcr\.io/realm/swiftlint)@sha256:(?<digest>[0-9a-f]{64})(?:\\s*#\\s*(?<currentValue>\\S+))?"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "{{{depName}}}",
      "autoReplaceStringTemplate": "uses: docker://{{{depName}}}@{{{newDigest}}}{{#if newValue}} # {{{newValue}}}{{/if}}"
    },
    {
      "customType": "regex",
      "fileMatch": ["Dockerfile"],
      "matchStrings": [
        "FROM\\s* (?<depName>ghcr\.io/realm/swiftlint)@sha256:(?<digest>[0-9a-f]{64})(?:\\s*#\\s*(?<currentValue>\\S+))?"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "{{{depName}}}",
      "autoReplaceStringTemplate": "FROM {{{depName}}}@{{{newDigest}}}{{#if newValue}} # {{{newValue}}}{{/if}}"
    },
  ],
}
