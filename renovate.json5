{
  "extends": [
    "config:recommended",
    "docker:pinDigests",
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["\\.github/workflows/.*\\.ya?ml$"],
      "matchStrings": [
        "uses:\\s*docker://(?<depName>[^@\\s]+)@sha256:(?<digest>[0-9a-f]{64})"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "{{{depName}}}",
      "autoReplaceStringTemplate": "uses: docker://{{{depName}}}@{{{newDigest}}}{{#if newValue}} # {{{newValue}}}{{/if}}"
    },
  ],
}
